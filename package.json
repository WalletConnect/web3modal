{
  "name": "web3modal",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "gallery": "turbo run dev:gallery",
    "laboratory": "turbo run dev:laboratory",
    "examples": "turbo run dev:example",
    "build:gallery": "turbo run build:gallery",
    "build:laboratory": "turbo run build:laboratory",
    "test": "turbo run test --parallel",
    "typecheck": "turbo run typecheck --parallel",
    "lint": "eslint .",
    "danger": "danger ci",
    "prettier": "prettier --check .",
    "new-version": "lerna version --no-git-tag-version --exact",
    "pre-publish": "turbo lint typecheck prettier test --parallel; npm run new-version; npm install; turbo run build;",
    "publish:latest": "lerna exec -- npm publish --no-private --access public --tag latest",
    "publish:canary": "lerna exec -- npm publish --no-private --access public --tag canary",
    "clean": "rm -rf `find . -type d -name node_modules -o -name dist -o -name .next -o -name out`; rm package-lock.json"
  },
  "workspaces": [
    "packages/ui",
    "packages/core",
    "packages/scaffold",
    "packages/wagmi",
    "apps/*",
    "examples/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "eslint": "8.46.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-require-extensions": "0.1.3",
    "lerna": "7.1.4",
    "prettier": "3.0.1",
    "typescript": "5.1.6",
    "vitest": "0.34.1",
    "vite": "4.4.9",
    "danger": "11.2.8",
    "vue": "3.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "turbo": "1.10.12",
    "viem": "1.5.3",
    "wagmi": "1.3.9"
  }
}
