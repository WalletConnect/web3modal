{
  "name": "@rerock/adapter-polkadot",
  "scripts": {
    "build:clean": "rm -rf dist",
    "build": "tsc --build tsconfig.build.json",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "vitest run --dir tests --coverage.enabled=true --coverage.reporter=json --coverage.reporter=json-summary --coverage.reportOnFailure=true"
  },
  "dependencies": {
    "@rerock/base": "workspace:*",
    "@rerock/common": "workspace:*",
    "@rerock/core": "workspace:*"
  },
  "devDependencies": {
    "vitest": "2.0.3",
    "@vitest/coverage-v8": "2.0.5"
  }
}
