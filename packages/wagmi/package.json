{
  "name": "@web3modal/wagmi",
  "version": "3.0.0-efbb62fa",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./react": {
      "import": "./dist/esm/src/react.js",
      "types": "./dist/types/src/react.d.ts"
    }
  },
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir ./dist/types",
    "build:source": "tsc --outDir ./dist/esm",
    "build": "npm run build:clean; npm run build:types; npm run build:source",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@web3modal/scaffold": "3.0.0-efbb62fa"
  },
  "devDependencies": {
    "@wagmi/core": "^1",
    "viem": "^1"
  },
  "peerDependencies": {
    "@wagmi/core": ">=1",
    "react": ">=17",
    "react-dom": ">=17",
    "viem": ">=1"
  },
  "keywords": [
    "web3",
    "crypto",
    "ethereum",
    "web3modal",
    "walletconnect",
    "lit",
    "webcomponents"
  ],
  "author": "WalletConnect <walletconnect.com>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/web3modal/web3modal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web3modal/web3modal.git"
  },
  "bugs": {
    "url": "https://github.com/web3modal/web3modal/issues"
  }
}
